

<body>
  <div class="heading">
    <h1> <%= @game.player1.name %> vs  <%= @game.player2.name %></h1>
    <h2> <%= @game.now_playing.name %>'s turn!</h2>
  </div>
  <div class="player1_hp">
    <progress max="<%=Battle::MAX_HP%>" value="<%= @game.player1.hp %>"></progress>
    <p><%=@game.player1.name%> hitpoints: <%=@game.player1.hp%></p>
  </div>
  <div class="player2_hp">
    <progress max="<%=Battle::MAX_HP%>" value="<%= @game.player2.hp %>"></progress>
    <p><%=@game.player2.name%> hitpoints: <%=@game.player2.hp%></p>
  </div>
  <div class="buttons">
    <form action="/attack">
      <input type="submit" value="Attack"/>
    </form>
  </div>
</body>
